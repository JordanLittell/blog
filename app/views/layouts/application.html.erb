		    <li class="main-item">Portfolio</li>
		    <li class="main-item">Articles</li>
		</ul>
	</nav>
<div id="container">
	<%flash.each do |key,msg|%>
		<div class=<%=key%>><h2 class="white"><%=msg%></h2></div>
	<%end%>
	<%= yield %>
</div>

</body>
</html>

