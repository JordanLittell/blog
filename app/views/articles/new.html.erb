<h1>New Article</h1>



<%=form_for :article,url: articles_path do |f| %>

<% if @article.errors.any? %>
<div id = "errors"><h2>
	<%=pluralize(@article.errors.count,'error')%> prohibited this form from submission.
	</h2>
</div>
	<%=@article.errors.full_messages.each do |msg|%>
	<ul>
		<li><%=msg%></li>
	</ul>
	<%end%>
<%end%>

	<p>
		<%=f.label :title%>
		<%=f.text_field :title%>
	</p>
