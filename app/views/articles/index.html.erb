  
  <div class="wrap">
    <h2 class="sea-blue">Articles</h2>
    <br>
  <%if current_admin%>
    <%=link_to "Create Article", new_article_path%>
  <%end%>
  </div>
  <div></div>
  <div class="wrap">

    <table id="ajax-table">
        <%=render partial: 'article_list', locals: {items: @articles}%>
    </table>

    <table id="dates">
      <tr><th>Archives</th></tr>
      <%(@times.length-1).times do |j|%>
        <% if @times[j].strftime('%b %Y') != @times[j+1].strftime('%b %Y')%>
        <tr><td>
          <%=link_to @times[j].strftime('%b %Y'), fetch_articles_path(:time =>@times[j].strftime('%b %Y')), :remote=>true%></td></tr>
        <tr><td>
          <%=link_to @times[j+1].strftime('%b %Y'), fetch_articles_path(:time =>@times[j+1].strftime('%b %Y')), :remote=>true%></td></tr>
        <%end%>
      <%end%>
    </table>


  </div>
  
  <br><br>



