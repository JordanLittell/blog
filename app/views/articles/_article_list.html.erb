

  <% items.each do |item| %>
    <tr>
      <td><%= link_to "#{item.title}", article_path(item) %></td>
      <td><%= item.description %></td>
      
      <td><%=item.created_at.to_formatted_s(:long)%></td>
      <% if current_admin %>
      <td><%=link_to 'edit', edit_article_path(item)%><%=link_to 'delete',article_path(item), method: :delete%></td>
      <%end%>
    </tr>
  <% end %>