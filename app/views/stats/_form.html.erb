<div id="stats-updates">
	<%=form_for @stat do |f| %>
		<h3><%=f.label :hours_slept%></h3><br>
		<%=f.number_field :hours_slept%><br>
		<h3><%=f.label :hours_worked%></h3><br>
		<%=f.number_field :hours_worked%><br>
		<h3><%=f.label :mg_caffeine%></h3><br>
		<%=f.number_field :mg_caffeine%><br>
		<h3><%=f.label :day_rating%></h3><br>
		<%=f.number_field(:day_rating )%><br><br>

		<%=f.submit :submit%>
	<%end%>
</div>